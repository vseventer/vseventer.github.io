{
  "name": "vseventer.github.io",
  "version": "4.0.0",
  "description": "My personal website.",
  "keywords": [
    "blog",
    "hugo",
    "static-site"
  ],
  "browserslist": "last 2 years and > 0.5%, ie 11",
  "homepage": "https://www.vseventer.com/",
  "bugs": "https://github.com/vseventer/vseventer.github.io/issues",
  "license": "MIT",
  "author": "Mark van Seventer <mark@vseventer.com> (https://www.vseventer.com)",
  "repository": {
    "type": "git",
    "url": "vseventer/vseventer.github.io"
  },
  "config": {
    "input": "src/",
    "intermediate": "tmp/",
    "output": "dist/"
  },
  "scripts": {
    "lint": "cross-env eslint '*.js' lib/ $npm_package_config_input --ignore-pattern $npm_package_config_input'scripts/'",
    "11ty": "cross-env node -r esbuild-register ./node_modules/.bin/eleventy --config=./eleventy.config.js --input=$npm_package_config_input --output=$npm_package_config_intermediate",
    "vite": "node -r esbuild-register ./node_modules/.bin/vite build",
    "clean": "cross-env rimraf $npm_package_config_intermediate $npm_package_config_output",
    "watch:11ty": "run-s '11ty -- --watch'",
    "prewatch:vite": "cross-env wait-on $npm_package_config_intermediate",
    "watch:vite": "node -r esbuild-register ./node_modules/.bin/vite",
    "prewatch": "run-s clean lint",
    "watch": "run-p watch:*",
    "prebuild": "run-s lint",
    "build": "NODE_ENV=production run-s 11ty vite",
    "worktree:add": "cross-env git worktree add -B master $npm_package_config_output origin/master",
    "worktree:clean": "cd $npm_package_config_output && git rm -r .",
    "worktree:prune": "cross-env git worktree remove $npm_package_config_output",
    "worktree:push": "cd $npm_package_config_output && git add -A . && git commit --allow-empty && git push -u origin",
    "predeploy": "run-s clean worktree:add worktree:clean",
    "deploy": "run-s build worktree:push",
    "postdeploy": "run-s worktree:prune",
    "start": "run-s watch"
  },
  "dependencies": {
    "@11ty/eleventy-navigation": "^0.1",
    "@amatlash/vite-plugin-stylelint": "^1.1",
    "@fullhuman/postcss-purgecss": "^4",
    "date-fns": "^2.25",
    "globby": "^11",
    "html-minifier-terser": "^6",
    "imagemin-mozjpeg": "^9",
    "markdown-it": "^10",
    "markdown-it-footnote": "^3",
    "node-fetch": "^3",
    "postcss-import": "^14",
    "postcss-preset-env": "^6.7",
    "postcss-reporter": "^7",
    "postcss-url": "^10",
    "sprintf-js": "^1.1",
    "stylelint": "^13.2",
    "tailwindcss": "^2.2",
    "vite-plugin-eslint": "^1.3"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0-beta.2",
    "@fortawesome/fontawesome-free": "^5.15",
    "cross-env": "^7",
    "esbuild": "^0.13",
    "esbuild-register": "^3",
    "eslint": "^8",
    "eslint-config-airbnb-base": "^14.2",
    "eslint-plugin-import": "^2.25",
    "npm-run-all": "^4.1",
    "rimraf": "^3",
    "sharp": "^0.25",
    "stylelint-config-recommended": "^5",
    "stylelint-no-unsupported-browser-features": "^5",
    "vite": "^2.6",
    "wait-on": "^6"
  },
  "engines": {
    "node": ">=12"
  },
  "private": true
}
