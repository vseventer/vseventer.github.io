{% extends "../_layouts/default.njk" %}

{% block csp %}
{% endblock %}

{% block styles %}
  <link rel="stylesheet" href="~wedding/styles/main.css" />
{% endblock %}

{% block head %}
  <meta name="robots" content="noindex" />

  {# Preload menu font. #}
  <link rel="preload" href="~wedding/fonts/CatalinaTypewriter.woff" as="font" crossorigin="anonymous" />

  {# Preload hero font on landing page, and title font on all others. #}
  {% if page.fileSlug === 'wedding' %}
    <link rel="preload" href="~wedding/images/bg.jpg?name=[path]hero.[contenthash:8].[ext]" as="image" crossorigin="anonymous" />
    <link rel="preload" href="~wedding/fonts/LuxusBrut/LuxusBrut.woff" as="font" crossorigin="anonymous" />
  {% else %}
    <link rel="preload" href="~wedding/fonts/DroidSerif-Regular.ttf" as="font" crossorigin="anonymous" />
  {% endif %}
{% endblock %}

{% block header %}
  <nav class="c-menu sm:py-sm">
    <label class="cursor-pointer flex items-center px-md py-sm sm:hidden" for="menu-toggle">
      <span class="flex-1 font-bold">Menu</span>
      <svg class="fill-current" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20">
        <title>menu</title>
        <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"></path>
      </svg>
    </label>

    <input class="hidden" id="menu-toggle" type="checkbox" />
    <div class="hidden sm:block">
      {{ collections.wedding | eleventyNavigation | eleventyNavigationToHtml({
        listElement: "ul",
        listItemElement: "li",

        listClass: "px-md sm:flex justify-center",
        listItemClass: "sm:px-sm py-sm sm:py-0",

        anchorClass: "c-menu__link",
        activeAnchorClass: "c-menu__link--active",

        activeKey: eleventyNavigation.key
      }) | safe }}
    </div>
  </nav>
{% endblock %}

{% block content %}
  <article class="c-post text-center">
    {{ content | safe }}
  </article>
{% endblock %}
