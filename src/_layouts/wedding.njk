{% extends "../_layouts/default.njk" %}

{% block csp %}
{% endblock %}

{% block styles %}
  <link rel="stylesheet" href="~src/styles/wedding.css" />
{% endblock %}

{% block head %}
  <meta name="robots" content="noindex" />
{% endblock %}

{% block header %}
  <header class="m-2 text-center">
    <h1 class="leading-none text-brown text-6xl font-handwriting">
      <a href="{%- link "wedding/index.md" | url -%}">Herta & Mark</a>
    </h1>
    <h2 class="text-xl text-brown uppercase font-typewriter">Wednesday 1 July 2020</h2>
  </header>
{% endblock %}

{% block content %}
  <div class="grid grid-cols-1 md:grid-rows-2 md:grid-cols-2 border-b-4 border-t-4 border-brown m-2 text-center">
    <div class="md:row-start-1 md:row-end-3 border-b-4 md:border-b-0 md:border-r-4 border-brown p-2 font-title">
      <h3 class="mb-2 text-gold text-xl uppercase font-typewriter">Welcome</h3>
      {{ content | safe }}
    </div>
    <div class="md:col-start-2 border-b-4 border-brown p-2 text-center" style="align-self: baseline">
      <h3 class="mb-2 text-gold text-xl uppercase font-typewriter">Countdown</h3>
      <p class="font-heading">
        <span class="leading-none text-brown text-5xl font-title" id="js-countdown"></span><br />days
        <p class="uppercase font-typewriter">Until the big day!</p>
      </p>
    </div>
    <div class="md:col-start-2 p-2 text-center">
      <h3 class="mb-2 text-gold text-xl uppercase font-typewriter">Are you in?</h3>
      <a class="inline-block border-2 border-gold p-1" href="{%- link "wedding/rsvp.njk" | url -%}">
        <p class="border border-gold p-2 text-3xl font-title">RSVP</p>
      </a>
    </div>
  </div>
{% endblock %}

{% block scripts %}
  {{ super() }}

  <script src="~src/scripts/wedding.js" async></script>
{% endblock %}
